<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:drawable="@drawable/section_tab_unselected" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/section_tab_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!-- Focused states -->
    <item android:drawable="@drawable/section_tab_focused" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />
    <!-- Pressed state -->
    <item android:drawable="@drawable/section_tab_pressed" android:state_pressed="true" />
</selector>